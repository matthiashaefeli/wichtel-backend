<%= form_with(model: @place, local: true) do |f| %>
  <% if @place.errors %>
    <p><%= @place.errors.full_messages.join(', ') %></p>
  <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :foto %>
    <%= f.file_field :main_image %>
  </p>
  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>